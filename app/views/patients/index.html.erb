<!-- app/views/patients/index.html.erb -->
<div class="d-flex justify-content-between align-items-center mb-4">
  <h2>Patients</h2>
  <% if receptionist? %>
    <%= link_to "Register New Patient", new_patient_path, class: "btn btn-primary" %>
  <% end %>
</div>

<div class="row mb-3">
  <div class="col-md-6">
    <%= form_with url: patients_path, method: :get, local: true, class: "d-flex" do |form| %>
      <%= form.text_field :search, placeholder: "Search patients...", 
          value: params[:search], class: "form-control me-2" %>
      <%= form.submit "Search", class: "btn btn-outline-secondary" %>
    <% end %>
  </div>
</div>

<div class="card">
  <div class="card-body">
    <% if @patients.any? %>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Phone</th>
              <th>Age</th>
              <th>Gender</th>
              <th>Registered</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @patients.each do |patient| %>
              <tr>
                <td><%= patient.name %></td>
                <td><%= patient.email %></td>
                <td><%= patient.phone %></td>
                <td><%= patient.age %></td>
                <td><%= patient.gender %></td>
                <td><%= patient.created_at.strftime('%m/%d/%Y') %></td>
                <td>
                  <%= link_to "View", patient, class: "btn btn-sm btn-outline-primary" %>
                  <% if receptionist? %>
                    <%= link_to "Edit", edit_patient_path(patient), class: "btn btn-sm btn-outline-secondary" %>
                    <%= link_to "Delete", patient, method: :delete, 
                        class: "btn btn-sm btn-outline-danger",
                        confirm: "Are you sure?" %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-center">No patients found.</p>
    <% end %>
  </div>
</div>