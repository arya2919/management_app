<!-- app/views/patients/_form.html.erb -->
<%= form_with model: patient, local: true do |form| %>
  <% if patient.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(patient.errors.count, "error") %> prohibited this patient from being saved:</h4>
      <ul>
        <% patient.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :email, class: "form-label" %>
        <%= form.email_field :email, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :phone, class: "form-label" %>
        <%= form.telephone_field :phone, class: "form-control" %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :date_of_birth, class: "form-label" %>
        <%= form.date_field :date_of_birth, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :gender, class: "form-label" %>
        <%= form.select :gender, ['Male', 'Female', 'Other'], 
            { prompt: 'Select Gender' }, { class: "form-control" } %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="mb-3">
        <%= form.label :emergency_contact, class: "form-label" %>
        <%= form.telephone_field :emergency_contact, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="mb-3">
    <%= form.label :address, class: "form-label" %>
    <%= form.text_area :address, class: "form-control", rows: 3 %>
  </div>

  <div class="mb-3">
    <%= form.label :medical_history, class: "form-label" %>
    <%= form.text_area :medical_history, class: "form-control", rows: 4 %>
  </div>

  <div class="d-flex justify-content-between">
    <%= link_to 'Cancel', patients_path, class: "btn btn-secondary" %>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>